@model IEnumerable<Movie>

<div class="d-flex justify-content-between">
    <h2>Movie List</h2>
    <span><a asp-controller="Movies" asp-action="Create" class="btn btn-outline-primary">Add Movie</a></span>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            @* <th scope="col">Category Name</th> *@
            <th scope="col">Description</th>
            <th scope="col">State</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Movie in Model)
        {
            <tr>
                <th scope="row">@Movie.MovieId</th>
                <td>@Movie.Name</td>
                @* <td>@Movie.CategoryId</td> *@
                <td>@Movie.Description</td>
                <td>@Movie.State</td>
                <td>
                    <a asp-controller="Movies" asp-action="Edit" asp-route-Id="@Movie.MovieId"
                        class="btn btn-sm btn-warning">Edit</a>

                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal"
                        data-bs-target="#exampleModal-@Movie.MovieId">
                        Delete
                    </button>
                </td>
            </tr>
            @* @await Html.PartialAsync("_Delete", Movie) *@
        }
    </tbody>
</table>
