@model IEnumerable<Product>

<div class="flex justify-between">
  <div>
    <h2>Product List</h2>
  </div>
  <div>
    <a asp-controller="Products" asp-action="Create" class="btn btn-outline-primary">Add Product</a>
  </div>
</div>

<div class="flex justify-center">
  <div class="w-[1250px]">
    <table class="table text-center">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Sub Category</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Store</th>
          <th scope="col">Price</th>
          <th scope="col">State</th>
          <th scope="col">Action</th>

        </tr>
      </thead>
      <tbody>
        @foreach (var product in Model)
        {
          <tr>
            <th scope="row">@product.Id</th>
            <td>@product.Name</td>
            <td>@product.SubCategory?.Name</td>
            <td>@product.SubCategory?.Category?.Name</td>
            <td>@product.Description</td>
            <td>@product.Store</td>
            <td>@product.Price</td>
            <td>@(product.State ? "Alındı" : "Alınacak")</td>

            <td>
              <a asp-controller="Products" asp-action="Edit" asp-route-Id="@product.Id"
                class="btn btn-sm btn-warning">Edit</a>

              <!-- Button trigger modal -->
              <button class="btn btn-sm btn-error" onclick="my_modal_@(product.Id).showModal()">Sil</button>
            </td>
          </tr>
          @await Html.PartialAsync("_Delete", product)
        }
      </tbody>
    </table>
  </div>
</div>