@model Product
<div class="mt-4">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item me-3">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-success">Home</a>
          </li>
          <li class="breadcrumb-item">
            <a href="/Categories/Index"
              class="text-decoration-none text-success mx-3">@Model.SubCategory?.Category?.Name</a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">
            <span class="ms-3">@Model.Name</span>
          </li>
        </ol>
      </nav>
    </div>
  </div>
</div>
<div class="row">

  <!-- Product Image -->
  <div class="col-lg-6 pe-5">
    <div class="row">
      <div class="col-12">
        <div class="card rounded mb-3">
          <div class="d-flex justify-content-center align-items-center" style="height: 400px; cursor: pointer;">
            <img src="@Model.Image" alt="" class="img-fluid rounded" style="height: 300px;">
          </div>
        </div>

      </div>
    </div>
  </div>

  <!-- Product Name -->
  <div class="col-lg-6 ps-5" id="@Model.Id">

    <div class="d-flex flex-column justify-content-between h-100">
      <div class=" border-bottom pb-4">
        <h2 class="fw-bold mb-3">@Model.Name</h2>
        <h5 class="my-3 badge p-2 bg-secondary">@Model.SubCategory?.Category?.Name</h5>
        <h5 class="my-3 badge p-2 bg-secondary">@Model.SubCategory?.Name</h5>
      </div>
      <div class="border-bottom pb-5">
        <span>@Model.Description</span>
      </div>

      <div class="">
        <table class="table table-borderless mb-0">
          <tbody>
            <tr>
              <td>Product Code:</td>
              <td>@Model.Id</td>
            </tr>
            <tr>
              <td>Price:</td>
              <td>@Model.Price</td>
            </tr>
            <tr>
              <td>Store:</td>
              <td>@Model.Store</td>
            </tr>
            <tr>
              <td>State:</td>
              <td>@(Model.State ? "Al覺nd覺" : "Al覺nmad覺")</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>